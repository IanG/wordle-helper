    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/WordleHelper/bin/Debug/net6.0/WordleHelper.dll",
            "args": [
                "--word", "M????",
                "--known-letters", "AL", 
                "--excluded-letters", "CDFGHIKOPQRSUVWXYZ",
                "--dictionary-file", "${workspaceFolder}/etc/dictionary-en.txt"
            ],
            "cwd": "${workspaceFolder}/WordleHelper",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}